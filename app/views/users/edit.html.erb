<%= render 'layouts/flash' %>




<div class="container">



  <div class="row">
  


    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing User</h2>

      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, local: true, html: { multipart: true } do |f| %>
        <div class="form-group mt-3">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        
        
        <div class="form-group mt-3">
          <%= f.file_field :profile_image %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, rows: 5, class: "form-control" %>
        </div>

        <div class="form-group mt-4">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
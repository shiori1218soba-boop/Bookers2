<div class='col-md-3'>
  <h2>User info</h2>
  <table class='table'>
    <tr>
      <% if displayed_user.profile_image.attached? %>
        <%= image_tag displayed_user.profile_image, class: "img-fluid" %>
      <% else %>
        <%= image_tag 'default-image.jpg', class: "img-fluid" %>
      <% end %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= displayed_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= displayed_user.introduction %></th>
    </tr>
  </table>

    <div class='row'>
      <%= link_to edit_user_path(displayed_user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: @new_book, local: true do |f| %>
    <div class="form-group mb-3">
      <%= f.label :title, class: "form-label fw-bold" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :body, "Opinion", class: "form-label fw-bold" %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
